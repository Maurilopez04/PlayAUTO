---
import Layout from '../layouts/Layout.astro';
import CardServices from '../components/CardServices.astro';
---

<Layout title="Servicios - Playa de autos">
    <section class="
    relative
    w-full
    ptablet:max-h-[1100px]
    bg-gray-900
    overflow-hidden
  ">
  <div class="relative w-full mx-auto flex items-center z-10">
      <div class="w-full mt-20 mx-auto text-center">
        <h1 class="
            font-sans font-light
            text-5xl
            ltablet:text-6xl
            lg:text-7xl
            leading-none
            mb-4
           text-white
          ">
          Servicios
        </h1>
        <p class="
            font-sans
            text-lg text-gray-400
            mx-auto
          ">
          Suscribete a nuestros planes de servicios y dale lo mejor a tu vehiculo.
        </p>
    </div>
  </div>
</section>

<section class="w-full pt-12 pb-32 px-4 bg-gray-900">
    <div class="relative w-full h-full max-w-7xl mx-auto">
      <div class="w-full max-w-4xl mx-auto space-y-20">
        <CardServices nombre='Lavado semanal' descripcion='Incluye un lavada completo al mes y 3 duchas con aspirado.'/>
        <CardServices nombre='Pulida' descripcion='Incluye pulida y encerado para mantenimiento de pintura.'/>
        <CardServices nombre='Mantenimiento' descripcion='Incluye inspeccion vehicular, cambio de aceite y reparaciones.'/>
      </div>
    </div>
  </section>
</Layout>