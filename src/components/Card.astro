---
interface Props {
	nombre: string;
	d1: string;
	d2: string;
	d3: string;
	precio: string;
	img: string;
	marca: string;
}

const { precio, nombre, d1, d2, d3, img, marca } = Astro.props;
---
<div class="relative group">
	<div class="flex items-center gap-4 mb-4">
	  <div class="
		  h-10
		  w-10
		  min-w-[2.5rem]
		  flex
		  items-center
		  justify-center
		  text-gray-500
		  dark:text-gray-200
		">
		<img src=`https://simpleicons.org/icons/${marca}.svg` alt=`${marca} Icon` class=" dark:filter dark:invert">	  
	</div>
	  <div class="leading-tight">
		<h3 class="
			font-sans font-semibold
			text-lg text-gray-800
			dark:text-gray-50
		  ">
		  {nombre}
		</h3>
		<p class="font-sans text-xs text-gray-400">
		  Disponible en el local
		</p>
	  </div>
	  <div class="ml-auto">
		<span class="
			font-sans font-semibold
			text-lg text-gray-800
			dark:text-gray-50
		  ">
		  ${precio}
		</span>
	  </div>
	</div>
	<div class="relative h-48 p-4 bg-gray-100 dark:bg-gray-800/80 group-hover:bg-sky-900 transition-colors duration-300">
	  <img class=" w-full" src=`/images/${img}` alt="Vehicle image">
	</div>
	<div class="
		w-full
		flex
		mt-6
		mb-4
		divide-x divide-gray-200
		dark:divide-gray-800
	  ">
	  <div class="flex-1 flex items-center justify-center px-4">
		<div class="text-center">
		  <span class="
			  block
			  font-sans font-semibold
			  text-gray-800
			  dark:text-gray-50
			">
			{d1}
			<small class="font-normal text-gray-400">
			  KM
			</small>
		  </span>
		  <small class="block font-sans text-gray-400">
			Estado
		  </small>
		</div>
	  </div>
	  <div class="flex-1 flex items-center justify-center px-4">
		<div class="text-center">
		  <span class="
			  block
			  font-sans font-semibold
			  text-gray-800
			  dark:text-gray-50
			">
			{d2}
			<small class="font-normal text-gray-400">
			
			</small>
		  </span>
		  <small class="block font-sans text-gray-400">
			Motor
		  </small>
		</div>
	  </div>
	  <div class="flex-1 flex items-center justify-center px-4">
		<div class="text-center">
		  <span class="
			  block
			  font-sans font-semibold
			  text-gray-800
			  dark:text-gray-50
			">
			{d3}
			<small class="font-normal text-gray-400">
			  
			</small>
		  </span>
		  <small class="block font-sans text-gray-400">
			AÃ±o
		  </small>
		</div>
	  </div>
	</div>
	<a href="/vehiculo.html" class="
		relative
		font-sans font-normal
		inline-flex
		items-center
		justify-center
		leading-5
		no-underline
		w-full
		space-x-1
		bg-gray-800
		hover:bg-gray-700
		text-gray-100
		h-10
		px-5
		py-3
		text-sm
		tw-accessibility
		transition-all
		duration-300
	  ">
	  Ver Detalles
	</a>
  </div>